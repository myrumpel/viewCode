{
  "bracketSpacing": true,
  "printWidth": 100,
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "useTabs": false,
  "trailingComma": "es5",
  "arrowParens": "always",
  "endOfLine": "lf",
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "^@core/(.)$",
    "^@shared/(.)$",
    "^@features/(.)$",
    "^@env/(.)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrderParserPlugins": ["decorators-legacy", "typescript"],
  "overrides": [
    {
      "files": [".ts", ".js", ".html", ".scss", ".css", ".less"],
      "options": {
        "tabWidth": 4
      }
    }
  ]
}
